<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:elevation="8dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/padd_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textColor="@color/black_semi_transparent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/fab_noteView"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="270dp"
            android:layout_marginTop="@dimen/padd_10"
            android:src="@drawable/ic_star_border_white_24dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <EditText
        style="@style/FullWidthEditText"
        android:id="@+id/title_view"
        android:layout_marginStart="@dimen/padd_10"
        android:textColor="@drawable/text_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textStyle="normal"
        android:hint="Give Some Title"/>

    <TextView
        android:layout_marginStart="@dimen/padd_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text:"
        android:textStyle="bold"
        android:textColor="@color/black_semi_transparent"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"/>
    <EditText
        style="@style/FullWidthEditText"
        android:textStyle="normal"
        android:layout_marginStart="@dimen/padd_10"
        android:id="@+id/text_view"
        android:textColorHighlight="#71C2D0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padd_10"
        android:hint="Enlist your Notes"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="220dp"
            android:text="Last Modified :"
            android:textSize="@dimen/padd_10"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_date_"
            android:textSize="@dimen/padd_10"
            android:fontFamily="sans-serif-condensed"
            android:text="2 May 2016 11:22:56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>